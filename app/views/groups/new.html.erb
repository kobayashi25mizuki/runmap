<h2 class="mb-4">新しいグループ作成</h2>

<div class="card shadow-sm p-4">
  <%= form_with model: @group, local: true, html: { multipart: true } do |f| %>
    
    <div class="mb-3">
      <%= f.label :image, "画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= f.label :name, "グループ名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "例：ランニング仲間" %>
    </div>

    <div class="mb-3">
      <%= f.label :introduction, "紹介文", class: "form-label" %>
      <%= f.text_area :introduction, class: "form-control", rows: 5, placeholder: "このグループの目的や雰囲気を書いてください" %>
    </div>

    <div>
      <%= f.submit "作成する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>