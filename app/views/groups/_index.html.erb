<h2 class="mb-4">グループ一覧</h2>

<%= link_to "グループ作成", new_group_path, class: "btn btn-primary mb-4" %>

<div class="row">
  <% groups.each do |group| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100 shadow-sm">
        <%= link_to group_path(group) do %>
          <%= image_tag group.get_image, class: "card-img-top", style: "object-fit: cover; height: 200px;" %>
        <% end %>
      
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to group.name, group_path(group), class: "stretched-link text-decoration-none" %>
          </h5>
          <p class="card-text"><%= group.introduction.truncate(100) %></p>
        </div>
        <div class="card-footer text-muted">
          メンバー数：<%= group.users.count %>
        </div>
      </div>
    </div>
  <% end %>
</div>