<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

        <% posts.each do |post| %>
          <div class="card mb-4">
            <div class="pt-4">
              <%= link_to post_path(post.id) do %>
                <div class="image-container">
                  <%= image_tag post.get_image, class: "img-fluid rounded", style: "width: 100%; height: 100%; object-fit: cover;" %>
                </div>
              <% end %>
            </div>
            <div class="align-self-center">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to post.title, post_path(post.id), class: "text-decoration-none text-dark" %>
                </h5>
                <p class="card-title"><span><i class="fa-solid fa-location-dot"></i> <%= post.address %></span></p>
                <p class="card-text">説明：<%= post.body %></p>
                <p class="text-muted mb-1">ユーザーネーム：<%= post.user.name %></p>
                <p class="text-muted mb-1">コメント数：<%= post.post_comments.count %></p>
                <p class="text-muted mb-1"><%= post.genre.prefecture %></p>
                <% if post.favorited_by?(current_user) %>
                  <p>
                    <%= link_to post_favorite_path(post), method: :delete do %>
                      ♥<%= post.favorites.count %> いいね
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to post_favorite_path(post), method: :post do %>
                      ♡<%= post.favorites.count %> いいね
                    <% end %>
                  </p>
                <% end %>

              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>