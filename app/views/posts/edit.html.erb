<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <% if flash[:alert] %>
        <div class="alert alert-danger text-center">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <h1 class="text-center mb-4">編集画面</h1>

      <% if @post.errors.any? %>
        <div class="alert alert-warning">
          <p><%= @post.errors.count %>件のエラーが発生しました：</p>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post, local: true, html: { multipart: true, class: "needs-validation" } do |f| %>
        <div class="mb-3">
          <%= f.label :image, "画像", class: "form-label" %>
          <%= f.file_field :image, accept: "image/*", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "本文", class: "form-label" %>
          <%= f.text_area :body, rows: 5, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :genre_id, "ジャンル（都道府県）" %><br>
          <%= f.collection_select :genre_id, Genre.all, :id, :prefecture, prompt: "都道府県を選択" %>
        </div>

        <div class="text-center">
          <%= f.submit "保存", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>