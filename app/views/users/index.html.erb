<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-11 col-sm-12">
      <div class="d-flex justify-content-end align-items-center mb-3">
        <div>
          <%= link_to "グループ作成", new_group_path, class: "btn btn-primary btn-sm me-2" %>
          <%= link_to "グループ一覧", groups_path, class: "btn btn-outline-secondary btn-sm" %>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
          <thead class="table-light">
            <tr>
              <th>名前</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody class="table-light">
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td>
                  <%= link_to '詳細を見る', user_path(user), class: "btn btn-sm btn-info user_#{user.id}" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>