<div>
  <h3><%= @user.name %></h3>
  <% if @user == current_user %>
    <%= link_to "プロフィール編集", edit_user_path(@user) %>
    <%= link_to "削除", user_path(@user), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= post.title %>
  <% end %>
  
  <P>説明：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>
