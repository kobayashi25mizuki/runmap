<!DOCTYPE html>
<html>
  <head>
    <title>Runmap</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/31a1452b9f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container">

            <%= link_to "RunMap", root_path, class: "navbar-brand" %>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                          <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">

                <%= render 'searches/form' %>

                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "投稿フォーム", new_post_path, class: 'nav-link text-dark' %>
                  </li>
                  <li>
                    <%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
                  </li>
                <% end %>
                  <li>
                    <%= link_to "about", about_path, class: 'nav-link text-dark' %>
                  </li>
              </ul>
            </div>
          </div>
        </nav>
    </header> 

    <main class="my-4">
      <%= yield %>
    </main>
  </body>
</html>
